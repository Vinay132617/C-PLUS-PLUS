// Example program
#include <iostream>
#include <string>
using namespace std;

int main()
{
    int scores[]{90,80,70};
    
    cout<<"Value of the scores is : "<<scores<<endl;
    
    int *pointer {scores};
    cout<<"value of the scores is : "<<pointer<<endl;
    
    cout<<"\nArray Subscript notation---------------------"<<endl;
    cout<<scores[0]<<endl;
    cout<<scores[1]<<endl;
    cout<<scores[2]<<endl;
    
    cout<<"\nPointer Subscript notation---------------------"<<endl;
    cout<<pointer[0]<<endl;
    cout<<pointer[1]<<endl;
    cout<<pointer[2]<<endl;
    
    cout<<"\nArray offset notation---------------------"<<endl;
    cout<<*scores<<endl;
    cout<<*(scores+1)<<endl;
    cout<<*(scores+2)<<endl;
    
    cout<<"\nPointer offset notation---------------------"<<endl;
    cout<<*pointer<<endl;
    cout<<*(pointer+1)<<endl;
    cout<<*(pointer+2)<<endl;
}
