//NATURAL NUMBER AND THIER SUM USING FOR LOOP
#include <iostream>

using namespace std;

int main()
{
    int i{0};
    int sum{0};
    int num{0};
    
    cout<<"Enter n number of natural numbers : ";
    cin>>num;
    cout<<"The first "<<num<<" natural numbers are "<<endl;
    
    for(i = 1; i <= num; ++i)
    {   cout<<i<<" ";
        sum = sum + i;  
    }
    cout<<endl;
    cout<<"======================================="<<endl;
    cout<<"The sum of first 10 natural numbers are : "<<sum<<endl;
    
    return 0;
}
